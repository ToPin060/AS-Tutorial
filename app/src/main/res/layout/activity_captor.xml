<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaptorActivity">

    <TextView
        android:id="@+id/magField_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="18dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/label_y"
        app:layout_constraintTop_toBottomOf="@+id/magField_x" />

    <TextView
        android:id="@+id/magField_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="17dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/label_z"
        app:layout_constraintTop_toBottomOf="@+id/magField_y" />

    <TextView
        android:id="@+id/label_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y: "
        app:layout_constraintBaseline_toBaselineOf="@+id/magField_y"
        app:layout_constraintStart_toStartOf="@+id/label_x" />

    <TextView
        android:id="@+id/label_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:text="X: "
        app:layout_constraintBaseline_toBaselineOf="@+id/magField_x"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/label_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z: "
        app:layout_constraintBaseline_toBaselineOf="@+id/magField_z"
        app:layout_constraintStart_toStartOf="@+id/label_y" />

    <TextView
        android:id="@+id/magField_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="319dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/label_x"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>